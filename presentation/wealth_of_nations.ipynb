import matplotlib.pyplot as plt

usa = panel[panel["iso3c"] == "USA"].sort_values("year")

plt.figure(figsize=(8,4))
plt.plot(usa["year"], usa["life_exp"])
plt.title("Life Expectancy — United States (1960–2023)")
plt.xlabel("Year")
plt.ylabel("Years")
plt.grid(True, alpha=0.3)
plt.tight_layout()
import numpy as np
plt.figure(figsize=(9,5))

for code, label in [("USA","United States"), ("CHN","China"), ("IND","India")]:
    sub = panel[panel["iso3c"] == code].sort_values("year")
    plt.plot(sub["year"], sub["gdp_pc"], label=label)

plt.yscale("log")  # GDP varies a lot; log makes it readable
plt.title("GDP per Capita over Time (log scale)")
plt.xlabel("Year")
plt.ylabel("Current US$ (log)")
plt.legend()
plt.grid(True, alpha=0.3)
plt.tight_layout()
corr = correlation_matrix(latest)

plt.figure(figsize=(5,4))
plt.imshow(corr, cmap="viridis")
plt.xticks(range(len(corr.columns)), corr.columns, rotation=45, ha="right")
plt.yticks(range(len(corr.index)), corr.index)
plt.colorbar(label="Pearson r")
plt.title("Correlation Matrix (Latest Available Year)")
plt.tight_layout()
import plotly.express as px

fig = px.scatter(
    latest,
    x="gdp_pc", y="life_exp",
    hover_name="iso3c",
    trendline="ols",
    title="Life Expectancy vs GDP per Capita (latest year)"
)
fig.update_layout(margin=dict(l=10,r=10,t=40,b=10))
fig.show()
fig.update_xaxes(type="log", title="GDP per Capita (current US$, log)")
fig.update_yaxes(title="Life Expectancy (years)")
fig.update_traces(marker=dict(size=8, opacity=0.8))
fig.show()
fig_map = choropleth_latest(latest, value_col="life_exp",
                            title="Life Expectancy (Latest Year by Country)")
fig_map.update_layout(margin=dict(l=10,r=10,t=40,b=10))
fig_map.show()
fig_map2 = choropleth_latest(latest, value_col="u5_mort",
                             title="Under-5 Mortality per 1,000 (Latest)")
fig_map2.update_layout(margin=dict(l=10,r=10,t=40,b=10))
fig_map2.show()
import plotly.graph_objects as go
from plotly.subplots import make_subplots

fig = make_subplots(rows=1, cols=2, subplot_titles=("Life Expectancy vs GDP", "Under-5 Mortality vs GDP"))

left = px.scatter(latest, x="gdp_pc", y="life_exp", hover_name="iso3c", trendline="ols")
right = px.scatter(latest, x="gdp_pc", y="u5_mort", hover_name="iso3c", trendline="ols")

for tr in left.data:
    fig.add_trace(tr, row=1, col=1)
for tr in right.data:
    fig.add_trace(tr, row=1, col=2)

fig.update_xaxes(type="log", title_text="GDP per Capita (log)", row=1, col=1)
fig.update_yaxes(title_text="Life Expectancy (years)", row=1, col=1)

fig.update_xaxes(type="log", title_text="GDP per Capita (log)", row=1, col=2)
fig.update_yaxes(title_text="Under-5 Mortality (per 1,000)", row=1, col=2)

fig.update_layout(title_text="How Prosperity Relates to Health Outcomes", showlegend=False, margin=dict(l=10,r=10,t=60,b=10))
fig.show()
